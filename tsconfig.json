{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "baseUrl": ".",
    "paths": {
      "@ashfox/runtime/*": ["packages/runtime/src/*"],
      "@ashfox/backend-core": ["packages/backend-core/src/index.ts"],
      "@ashfox/backend-core/*": ["packages/backend-core/src/*"],
      "@ashfox/backend-blockbench": ["packages/backend-blockbench/src/index.ts"],
      "@ashfox/backend-blockbench/*": ["packages/backend-blockbench/src/*"],
      "@ashfox/backend-engine": ["packages/backend-engine/src/index.ts"],
      "@ashfox/backend-engine/*": ["packages/backend-engine/src/*"],
      "@ashfox/native-pipeline": ["packages/native-pipeline/src/index.ts"],
      "@ashfox/native-pipeline/*": ["packages/native-pipeline/src/*"],
      "@ashfox/gateway-persistence": ["packages/gateway-persistence/src/index.ts"],
      "@ashfox/gateway-persistence/*": ["packages/gateway-persistence/src/*"],
      "@ashfox/contracts/types": ["packages/contracts/src/types/index.ts"],
      "@ashfox/contracts/types/*": ["packages/contracts/src/types/*"],
      "@ashfox/contracts/mcpSchemas/*": ["packages/contracts/src/mcpSchemas/*"],
      "@ashfox/contracts/*": ["packages/contracts/src/*"]
    },
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "types": ["node"],
    "lib": ["ES2020", "DOM"],
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": [
    "packages/runtime/src/**/*",
    "packages/backend-core/src/**/*",
    "packages/backend-blockbench/src/**/*",
    "packages/backend-engine/src/**/*",
    "packages/native-pipeline/src/**/*",
    "packages/gateway-persistence/src/**/*",
    "apps/plugin-desktop/src/**/*",
    "apps/ashfox/src/**/*",
    "apps/gateway/src/**/*",
    "apps/worker/src/**/*",
    "packages/contracts/src/**/*"
  ]
}
