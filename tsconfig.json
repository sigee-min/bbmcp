{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "baseUrl": ".",
    "paths": {
      "@ashfox/runtime/*": ["packages/runtime/src/*"],
      "@ashfox/contracts/types": ["packages/contracts/src/types/index.ts"],
      "@ashfox/contracts/types/*": ["packages/contracts/src/types/*"],
      "@ashfox/contracts/mcpSchemas/*": ["packages/contracts/src/mcpSchemas/*"],
      "@ashfox/contracts/*": ["packages/contracts/src/*"]
    },
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "types": ["node"],
    "lib": ["ES2020", "DOM"],
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": [
    "packages/runtime/src/**/*",
    "apps/plugin-desktop/src/**/*",
    "apps/ashfox/src/**/*",
    "packages/contracts/src/**/*"
  ]
}

