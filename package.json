{
  "name": "ashfox",
  "version": "0.0.2",
  "private": true,
  "workspaces": [
    "apps/plugin-desktop",
    "apps/ashfox",
    "packages/runtime",
    "packages/contracts",
    "packages/conformance"
  ],
  "scripts": {
    "build": "npm run build:plugin-desktop && npm run build:ashfox",
    "build:plugin-desktop": "npm --workspace @ashfox/plugin-desktop run build",
    "build:ashfox": "npm --workspace @ashfox/ashfox run build",
    "docs:generate:tools": "node ./scripts/docs/generate-tool-pages.js",
    "test:unit": "npm --workspace @ashfox/runtime run test",
    "test:conformance": "npm --workspace @ashfox/conformance run test",
    "test": "npm run typecheck && npm run test:unit && npm run test:conformance",
    "test:cov": "npm --workspace @ashfox/runtime run test:cov",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "spec:sync": "node scripts/specs/update-blockbench-spec.js",
    "quality:check": "npm run typecheck && node scripts/quality/check.js",
    "quality:audit": "node scripts/quality/audit.js",
    "quality:deadcode": "node scripts/quality/deadcode.js",
    "quality:coverage": "node scripts/quality/coverage.js",
    "release:validate": "node scripts/release/validate.js",
    "quality": "npm run test:cov && npm run test:conformance && npm run build && npm run quality:check && npm run quality:deadcode && npm run quality:coverage && npm run quality:audit && npm run release:validate"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "c8": "^10.1.3",
    "esbuild": "^0.27.3",
    "ts-node": "^10.9.2",
    "ts-prune": "^0.10.3",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "@openai/agents": "^0.4.3",
    "zod": "^4.3.6"
  }
}


